#page-header
  %h1 Your Verses

#passages-filter
  .navbar
    .navbar-inner
      %a.brand
        %small Filter by
      %ul.nav
        %li{class:@range == :thisweek && "active"}
          %a{:href => '/passages/thisweek'}
            This Week
        %li{class:@range == :thismonth && "active"}
          %a{:href => '/passages/thismonth'}
            This Month
        %li{class:@range == :all && "active"}
          %a{:href => passages_path}
            All Time
      /
        %li
          %form.navbar-search
            %input.search-query{:type => "text"}
            %button.btn{:type => "submit"}
              Search

%table
  %tr
    %th
    %th Date
    %th Passage
    %th Text

  - @passages.each do |passage|
    %tr
      %td= link_to 'X', passage, :confirm => 'Are you sure?', :method => :delete
      %td= passage.discovery
      %td= link_to passage.reference, passage
      %td= passage.text

%br

= link_to 'New Passage', new_passage_path
