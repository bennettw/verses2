= form_for @verse do |f|
  -if @verse.errors.any?
    #error_explanation
      %h2= "#{pluralize(@verse.errors.count, "error")} prohibited this verse from being saved:"
      %ul
        - @verse.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :book
    = f.text_field :book
  .field
    = f.label :chapter
    = f.number_field :chapter
  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :discovery
    = f.date_select :discovery
  .actions
    = f.submit 'Save'
